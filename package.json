{
  "name": "legc-lan-launcher",
  "productName": "LEGC LAN-Launcher",
  "author": {
    "name": "Julian Lehrhuber",
    "email": "jl@lerry.de"
  },
  "description": "A launcher to provide content (i.e. games, but it can also be used for other stuff) in a P2P-manner to friends on a LAN-Party. It is no more than a frontend based on electron to control a slightliy modified instance of Syncthing.",
  "license": "GNU GPLv3",
  "version": "0.9.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "axios": "^0.20.0",
    "core-js": "^3.6.5",
    "epic-spinners": "^1.1.0",
    "fs-extra": "^9.0.1",
    "material-icons": "^0.3.1",
    "node-sass": "^4.14.1",
    "sass-loader": "^10.0.2",
    "stylus": "^0.54.8",
    "stylus-loader": "^3.0.2",
    "vue": "^2.6.12",
    "vue-i18n": "^8.21.0",
    "vue-router": "^3.4.3",
    "vue-toasted": "^1.1.28",
    "vuesax": "^3.11.17",
    "vuetify": "^2.3.10",
    "vuex": "^3.5.1",
    "vuex-electron": "^1.0.3",
    "xml-parser": "^1.2.1"
  },
  "devDependencies": {
    "@mdi/font": "^5.5.55",
    "@vue/cli-plugin-babel": "^4.5.4",
    "@vue/cli-plugin-eslint": "^4.5.4",
    "@vue/cli-service": "^4.5.4",
    "babel-eslint": "^10.1.0",
    "electron": "^9.3.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-icon-builder": "^1.0.2",
    "eslint": "^7.8.1",
    "eslint-plugin-vue": "^6.2.2",
    "vue-cli-plugin-electron-builder": "^2.0.0-rc.4",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": 1
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}

{
  "name": "legc-lan-launcher",
  "productName": "LEGC LAN-Launcher",
  "author": {
    "name": "Julian Lehrhuber",
    "email": "jl@lerry.de"
  },
  "description": "A launcher to provide content (e.g. games, but it can also be used for other stuff) in a P2P-manner to friends on a LAN-Party. It is no more than a frontend based on electron to control a slightly modified instance of Syncthing.",
  "license": "GNU GPLv3",
  "version": "1.0.0-rc.1",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "@mdi/font": "^5.9.55",
    "axios": "^0.21.1",
    "chart.js": "^3.5.0",
    "chartjs-adapter-date-fns": "^2.0.0",
    "core-js": "^3.16.0",
    "date-fns": "^2.23.0",
    "epic-spinners": "^1.1.0",
    "fs-extra": "^10.0.0",
    "hsl-to-hex": "^1.0.0",
    "material-icons": "^1.1.0",
    "roboto-fontface": "*",
    "vue-i18n": "^8.25.0",
    "vue-toasted": "^1.1.28",
    "vuetify": "^2.5.8",
    "vuex": "^3.6.2",
    "vuex-electron": "^1.0.3",
    "xml-parser": "^1.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-eslint": "^5.0.0-beta.2",
    "@vue/cli-service": "^4.5.13",
    "babel-eslint": "^10.1.0",
    "electron": "^13.1.8",
    "electron-devtools-installer": "^3.2.0",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.15.1",
    "sass": "^1.37.5",
    "sass-loader": "^10.2.0",
    "stylus": "^0.54.8",
    "stylus-loader": "^4.3.3",
    "vue": "^2.6.14",
    "vue-cli-plugin-electron-builder": "^2.1.1",
    "vue-cli-plugin-vuetify": "^2.4.2",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": 1
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
